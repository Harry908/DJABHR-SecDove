{
  "version": 2,
  "buildCommand": "cd server && npm run build",
  "outputDirectory": "server",
  "installCommand": "cd server && npm install",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/api/test.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "server/api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "server/api/socketio.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "server/api/health.js": {
      "memory": 256,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/socket.io/(.*)", "destination": "/server/api/socketio" },
    { "source": "/api/health", "destination": "/server/api/health" },
    { "source": "/api/test", "destination": "/server/api/test" },
    { "source": "/api/(.*)", "destination": "/server/api/index" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://secdove-frontend.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Content-Length, Content-Type"
        }
      ]
    },
    {
      "source": "/socket.io/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://secdove-frontend.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        },
        {
          "key": "Access-Control-Expose-Headers",
          "value": "Content-Length, Content-Type"
        }
      ]
    }
  ]
}