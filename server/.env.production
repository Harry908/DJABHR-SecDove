# Production Environment Variables for SecureDove Server
# These should be set in your hosting platform (Vercel) environment variables

# Server Configuration
PORT=8000
NODE_ENV=production

# JWT Secret (REQUIRED - Generate a strong random secret for production)
JWT_SECRET=

# Database (Use managed database or /tmp for serverless ephemeral storage)
DB_PATH=/tmp/securedove.db
ALLOW_EPHEMERAL_DB=true

# CORS - Frontend origin (CRITICAL - Must match your frontend domain exactly)
CORS_ORIGIN=https://secdove-frontend.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_REQUESTS=5
